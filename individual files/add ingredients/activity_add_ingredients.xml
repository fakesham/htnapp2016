<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<!-- prompt for user to add an ingredient as a string --> 
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addIngredientPrompt"
        android:layout_weight="0.07"
        android:text="What ingredient should we add?"
        android:hint="What ingredient should we add?" 
        android:layout_above="@+id/addMore"
        android:layout_alignLeft="@+id/doneAddingIngredient"
        android:layout_alignStart="@+id/doneAddingIngredient"
        android:layout_marginBottom="57dp"
        android:layout_alignRight="@+id/addMore"
        android:layout_alignEnd="@+id/addMore" />

<!-- submits text and returns to previous screen --> 
<!-- takes user to viewIngredients activity --> 
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add more"
        android:id="@+id/addMore"
        android:layout_weight="0.07"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/doneAddingIngredient"
        android:layout_toEndOf="@+id/doneAddingIngredient" />

<!-- submits text and returns to the same screen --> 

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneAddingIngredient"
        android:layout_weight="0.02"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignTop="@+id/addMore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>